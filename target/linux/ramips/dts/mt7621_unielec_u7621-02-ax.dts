#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "unielec,u7621", "mediatek,mt7621-soc";
	model = "unielec_u7621";

        aliases {
                led-boot = &led_status;
                led-failsafe = &led_status;
                led-running = &led_status;
                led-upgrade = &led_status;
        };

	leds {
                compatible = "gpio-leds";
                led_status: status {
                        label = "green:status";
                        gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
                };
        };

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};
	
};

&spi0 {
	status = "okay";
	cs-gpios = <0>, <0>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <14000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "bootloader";
				reg = <0x0 0x30000>;
			};

			partition@30000 {
				label = "config";
				reg = <0x30000 0x10000>;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x50000 0x40000>;
			};

			partition@90000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x90000 0xf70000>;
			};
		};
	};
};

&factory {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_factory_3fff4: macaddr@3fff4 {
		reg = <0x3fff4 0x6>;
	};
};

&sdhci {
	status = "okay";
};

&pcie {
	status = "okay";
};

&pcie1 {
       wifi@0,0 {
              compatible = "mediatek,mt76";
              reg = <0x0000 0 0 0 0>;
              mediatek,mtd-eeprom = <&factory 0x0000>;
              ieee80211-freq-limit = <2400000 6000000>;
              nvmem-cell-names = "mac-address";
              mac-address-increment = <2>;


              led {
                      led-sources = <2>;
                      linux,default-trigger = "phy0tpt";
                      led-active-low;
              };
       };
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};

		port@3 {
			status = "okay";
			label = "lan4";
		};

		wan: port@4 {
			status = "okay";
			label = "wan";
		};
	};
};

&gmac0 {
	nvmem-cells = <&macaddr_factory_3fff4>;
	nvmem-cell-names = "mac-address";
};

&wan {
	nvmem-cells = <&macaddr_factory_3fff4>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <1>;
};



&state_default {
	gpio {
		groups = "jtag", "wdt", "rgmii2";
		function = "gpio";
	};
};

&uartlite2 {
        status = "okay";
};

&uartlite3 {
        status = "okay";
};


